#pragma once

#include "pin_data.h"

// We read in from a battery data sensor.
typedef struct {
	ADCSensor *adc_sensor;
	uint8_t rank;
} BatteryDataSensor;

/** PUBLIC FUNCTIONS **/

// REQUIRES: _adc_sensor is an ADCSensor object and _rank is the adc rank
// MODIFIES: nothing
// EFFECTS: Returns a pointer to a created BatteryDataSensor object
BatteryDataSensor *new_battery_sensor(ADCSensor *_adc_sensor, uint8_t _rank);

// REQUIRES: ForceSensor is a force_sensor object
// MODIFIES: nothing
// EFFECTS: Returns the currently stored value force sensor voltage output.
float get_force_sensor_data(ForceSensor *force_sensor);

/** PRIVATE FUNCTIONS MAY BE IN SOURCE FILE ONLY **/
